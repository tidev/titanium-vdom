{
  "name": "titanium-vdom",
  "version": "0.1.0",
  "description": "A virtual DOM implementation for Titanium",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "karma start karma.unit.config.js",
    "test:unit-dev": "karma start karma.unit.config.js --auto-watch --single-run=false --reporters min,notify",
    "lint": "tslint -p tsconfig.json"
