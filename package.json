  "author": "Axway Appcelerator",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appcelerator/titanium-vdom.git"
  },
  "bugs": {
    "url": "https://github.com/appcelerator/titanium-vdom/issues"
  },
  "homepage": "https://github.com/appcelerator/titanium-vdom#readme",
  "devDependencies": {
    "@types/jasmine": "^2.8.7",
    "@types/titanium": "^7.1.0",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.2",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^1.1.2",
    "karma-min-reporter": "^0.1.0",
    "karma-notify-reporter": "^1.0.1",
    "karma-typescript": "^3.0.12",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-jasmine-rules": "^1.3.2",
    "typescript": "^2.8.3"
  }
